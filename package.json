    "ios:dev": "cap run ios",
    "cap:sync": "cap sync"
  },
  "overrides": {
    "fastq": "^1.15.0"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/core": "^6.2.1",
    "@capacitor/ios": "^6.2.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.378.0",
    "next": "^16.1.1",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
